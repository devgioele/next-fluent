{
  "name": "next-fluent",
  "version": "1.0.0",
  "description": "The most natural-sounding way to translate your Next.js apps",
  "license": "LGPL-3.0-or-later",
  "repository": "git@github.com:devgioele/next-fluent.git",
  "keywords": [
    "nextjs",
    "next",
    "react",
    "fluent",
    "i18next",
    "translation",
    "localisation",
    "localization",
    "locale",
    "i18n",
    "l10n"
  ],
  "author": {
    "name": "Gioele De Vitti",
    "email": "gioele@devgioele.xyz",
    "url": "https://devgioele.xyz"
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://devgioele.xyz"
    }
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": ["dist"],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "eslint '**/*.ts' --cache --fix",
    "prettify": "prettier --write .",
    "build": "rimraf dist && pnpm run build:types & pnpm run build:cjs & pnpm run build:esm &",
    "build:cjs": "swc src -d dist/cjs -C module.type=commonjs",
    "build:esm": "swc src -d dist/esm -C module.type=es6",
    "build:types": "tsc -p tsconfig.types.json"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.25",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-next": "^13.1.1",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@fluent/bundle": "^0.17.1",
    "@fluent/langneg": "^0.6.2",
    "@fluent/react": "^0.14.1",
    "cheerio": "1.0.0-rc.12",
    "hoist-non-react-statics": "^3.3.2",
    "intl-pluralrules": "^1.3.1",
    "next": "^13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
